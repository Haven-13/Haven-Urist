{
  "private": true,
  "name": "tgui-workspace",
  "version": "4.3.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "tgui:build": "webpack",
    "tgui:analyze": "webpack --analyze",
    "tgui:dev": "node --experimental-modules packages/tgui-dev-server/index.js",
    "tgui:lint": "eslint packages --ext .js,.cjs,.ts,.tsx",
    "tgui:tsc": "tsc",
    "tgui:test": "jest --watch",
    "tgui:test-simple": "CI=true jest --color",
    "tgui:test-ci": "CI=true jest --color --collect-coverage",
    "tgui:bench": "webpack --env TGUI_BENCH=1 && node packages/tgui-bench/index.js"
  },
  "dependencies": {
    "@babel/core": "^7.19.6",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-jscript": "^7.18.9",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.2.0",
    "@types/jsdom": "^20.0.0",
    "@types/node": "^18.11.2",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/parser": "^5.40.1",
    "babel-jest": "^29.2.1",
    "babel-loader": "^8.2.5",
    "babel-plugin-inferno": "6.3.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "common": "workspace:*",
    "css-loader": "^6.7.1",
    "eslint": "^8.25.0",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-sonarjs": "^0.16.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "file-loader": "^6.2.0",
    "inferno": "^7.4.11",
    "jest": "^29.2.1",
    "jest-circus": "^29.2.1",
    "jest-environment-jsdom": "^29.2.1",
    "jsdom": "^20.0.1",
    "mini-css-extract-plugin": "^2.6.1",
    "sass": "^1.55.0",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "typescript": "4.5.5",
    "url-loader": "^4.1.1",
    "webpack": "^5.76.0",
    "webpack-bundle-analyzer": "^4.6.1",
    "webpack-cli": "^4.10.0"
  },
  "packageManager": "yarn@3.1.1"
}
